<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4DE"
    android:orientation="vertical"
    android:padding="20dp">

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:backgroundTint="#000000"
        android:indeterminate="true"
        android:indeterminateTint="#1a09d6"
        android:max="100"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/fragment_register_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Enter your first name"
        android:padding="5dp" />

    <EditText
        android:id="@+id/fragment_register_last_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Enter your last name"
        android:padding="5dp" />

    <EditText
        android:id="@+id/fragment_register_email"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Enter your email"
        android:padding="5dp" />

    <EditText
        android:id="@+id/fragment_register_mobile"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Enter your phone number"
        android:padding="5dp" />

    <EditText
        android:id="@+id/fragment_register_pass"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Password must be at least 6 characters long"
        android:padding="5dp"
        android:password="true" />


    <Button
        android:id="@+id/button_register_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:text="REGISTER" />


</LinearLayout>